<Page x:Class="DIary1.Views.Pages.Auth.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DIary1.Views.Pages.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация" Loaded="Page_Loaded">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFC8C8C8" Width="350">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <TextBlock x:Name="TBlockHeading" Text="Регистрация" FontSize="18"></TextBlock>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Имя:</Label>
                    <TextBox x:Name="TBoxFirstName" Width="150" Height="25"></TextBox>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Фамилия:</Label>
                    <TextBox x:Name="TBoxLastName" Width="150" Height="25"></TextBox>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Отчество:</Label>
                    <TextBox x:Name="TBoxMiddleName" Width="150" Height="25"></TextBox>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Дата рождения:</Label>
                    <DatePicker x:Name="DpickerDataBirth" Width="150" Height="25"></DatePicker>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Email:</Label>
                    <TextBox x:Name="TBoxEmail" Width="150" Height="25"></TextBox>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Телефон:</Label>
                    <TextBox x:Name="TBoxPhone" Width="150" Height="25"></TextBox>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Имя пользователя</Label>
                    <TextBox x:Name="TBoxUserName" Width="150" Height="25"></TextBox>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Label Width="112">Пароль</Label>
                    <PasswordBox x:Name="PBoxPassword" Width="150" Height="25"></PasswordBox>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 10 0 10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="Создать аккаунт" Width="130" Height="25" Margin="10" x:Name="BtnRegister" Click="BtnRegister_Click"></Button>
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
